use("platzi_store")

db.createCollection('users', {
  validator: {
    // Donde se espcifican las reglas
    $jsonSchema: {
      bsonType: 'object',
      // Campos que requerir√° si o si
      required: ['email', 'password', 'role'],
      // Si permite propiedades ajenas al esquema.
      additionalProperties: false,
      title: "Users Object Validation",
      // Propiedades del documento
      properties: {
        _id: {
          bsonType: "objectId"
        },
        first_name: {
          bsonType: 'string',
          description: "Must be a strinng type."
        },
        last_name: {
          bsonType: 'string',
          description: "Must be a string type."
        },
        email: {
          bsonType: 'string',
          description: "Must be a string type and is required."
        },
        password: {
          bsonType: 'string',
          description: "Must be a string type and is required."
        },
        age: {
          bsonType: 'number',
          minimum: 18,
          maximum: 99
        },
        isSingle: {
          bsonType: 'bool'
        },
        role: {
          enum: ['customer', 'seller', 'admin']
        }
      }
    },
  }
});
